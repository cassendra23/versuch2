package se1c3;

public class Kfz {
	
	//Attributes
	private int sitze, tankinhalt;
	private float verbrauch;

	//Konstruktor Kfz
	Kfz(int sitze, int tankinhalt, float verbrauch) {
		
		this.sitze = sitze;
		this.tankinhalt = tankinhalt;
		this.verbrauch = verbrauch;
	}
	
	//Methode reichweite, Rueckgabewert=reichweite(km)
	public float reichweite() {
	
		return (tankinhalt / getverbrauch());
	}
	
	//Methode Spritverbrauch, km=Entfernung, Rueckgabewert=Spritverbrauch(Liter)
	public float Spritverbrauch(int km) {
		
		return (km / getverbrauch());
	}
	
	//to access verbrauch 
	public float getverbrauch() {
		return verbrauch;
	}
	

}
